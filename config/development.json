{
  "api": {
    "baseUrl": "http://127.0.0.1:8000/api/v1/"
  },

  "paths": {
    "imagesRoot": "/assets/images/",
    "userImageFolder": "/assets/images/avatars/"
  },

  "localization": {
    "languages": [
      {"code": "en", "name": "EN", "culture": "en-EN"}
    ],
    "defaultLanguage": "en"
  },

  "notifications": {
    "options": {
      "toastLife": 4000,
      "dismiss": "auto",
      "newestOnTop": true,
      "showCloseButton": false,
      "enableHTML": true
    }
  },

  "debugging": true
}